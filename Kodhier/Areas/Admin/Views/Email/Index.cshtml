@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayAdmin.cshtml";
}

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<h2>Email management</h2>
<input type="text" id="subj" class="form-control" placeholder="Subject" />
<div id="editor">
    <p>Hello World!</p>
    <p>Some initial <strong>bold</strong> text</p>
    <p><br></p>
</div>
<button onclick="update()">Send</button>
<br/>
<div id="out"></div>
<form asp-action="SendEmail">
    <input type="hidden" id="formSubj" name="subject" />
    <input type="hidden" id="formHtml" name="htmlMessage" />
    <input type="submit" onclick="send()" />
</form>
@section Scripts {
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        var quill = new Quill('#editor', {
            modules: { toolbar: true },
            theme: 'snow'
        });
        function update() {
            $('#out').html($('.ql-editor').html());
        }
        function send() {
            $('#formHtml').val($('.ql-editor').html());
            $('#formSubj').val($('#subj').val());
            return true;
        }
    </script>
}
