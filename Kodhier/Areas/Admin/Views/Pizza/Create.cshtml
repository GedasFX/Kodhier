@model Kodhier.ViewModels.Admin.PizzaViewModels.PizzaCreateViewModel

@{
    Layout = "~/Areas/Admin/Views/Home/_LayAdmin.cshtml";
    ViewData["Title"] = "Create";
}

<link href="~/adm/css/Custom.css" rel="stylesheet" />


<section class="content">

    <header class="content__title">
        <h1>Create pizza</h1>
    </header>

    <div class="row">        
            <div class="mx-auto main2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PriceCategoryId" class="control-label"></label>
                        <select asp-for="PriceCategoryId" asp-items="@(new SelectList(Model.PriceCategories, "Id", "Description"))" class="form-control"></select>
                        <span asp-validation-for="PriceCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImagePath" class="control-label"></label>
                        <input asp-for="ImagePath" class="form-control" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="row text-center">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-outline-success create-button"/>
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-danger cancel-button">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>        
</section>