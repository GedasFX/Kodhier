@using Kodhier.ViewModels.PizzaViewModels
@model Kodhier.ViewModels.PizzaViewModels.PizzaViewModel

@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/Layout.css" rel="stylesheet" />
<header>
    <h1>DELETE PIZZA</h1>
</header>
<div class="col-md-4 offset-md-4 text-center">
    <div class="alert alert-danger" role="alert">
        <h4>Are you sure you want to delete this pizza?</h4>
    </div>
</div>
<div class="col-md-4 offset-md-4 text-center">
    <div class="main">
        <img src=@Html.DisplayFor(model => model.ImagePath) class="rounded-circle img-fluid" />
        <h4 class="text-info text-center" style="margin-top:5px">@Html.DisplayFor(model => model.Name)</h4>
        <h5 class="text-white">@Html.DisplayFor(model => model.Description)</h5>
        <br />
        <h5 class="text-white">
            @foreach (var price in Model.Prices)
            {
                <span>@Html.Raw($"{price.Price} €")</span>
                <span>@Html.Raw($"{price.Size} cm")</span>
                <br/>
            }
        </h5>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="Delete" class="btn btn-outline-success" style="margin:5px 5px 5px 20px" />
            <a asp-action="Index" class="btn btn-outline-danger" style="margin:5px 5px 5px 5px">Cancel</a>
        </form>
    </div>
</div>