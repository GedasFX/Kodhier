@model Kodhier.Areas.Admin.ViewModels.PizzaViewModel

@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/Layout.css" rel="stylesheet" />
<header>
    <h1>DELETE PIZZA</h1>
</header>
<div class="col-md-4 offset-4 text-center">
    <div class="alert alert-danger" role="alert">
        <h4>Are you sure you want to delete this pizza?</h4>
    </div>
</div>
<div class="col-md-4 offset-4">
    <div class="main">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ImagePath)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ImagePath)
            </dd>
        </dl>
        <div class="text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-outline-success" style="margin:5px 5px 5px 20px" />
            <a asp-action="Index" class="btn btn-outline-danger" style="margin:5px 5px 5px 5px">Cancel</a>
        </form>
        </div>
    </div>
</div>