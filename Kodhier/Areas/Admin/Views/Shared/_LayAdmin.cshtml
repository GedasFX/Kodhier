    <!-- Javascript -->
    <!-- Vendors -->
    <script src="~/adm/vendors/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/adm/vendors/bower_components/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/adm/vendors/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/adm/vendors/bower_components/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/adm/vendors/bower_components/jquery-scrollLock/jquery-scrollLock.min.js"></script>
    <script src="~/adm/vendors/bower_components/salvattore/dist/salvattore.min.js"></script>
    <script src="~/adm/vendors/bower_components/flot/jquery.flot.js"></script>
    <script src="~/adm/vendors/bower_components/flot/jquery.flot.resize.js"></script>
