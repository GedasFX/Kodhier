    <script src="~/adm/vendors/bower_components/jquery.easy-pie-chart/dist/jquery.easypiechart.min.js"></script>
    <script src="~/adm/vendors/bower_components/peity/jquery.peity.min.js"></script>
    <script src="~/adm/vendors/bower_components/moment/min/moment.min.js"></script>
    <script src="~/adm/vendors/bower_components/fullcalendar/dist/fullcalendar.min.js"></script>

    <script src="~/adm/vendors/bower_components/lightgallery/dist/js/lightgallery-all.min.js"></script>
    <!-- Charts and maps-->
    <script src="~/adm/demo/js/flot-charts/curved-line.js"></script>
    <script src="~/adm/demo/js/flot-charts/line.js"></script>
    <script src="~/adm/demo/js/flot-charts/dynamic.js"></script>
    <script src="~/adm/demo/js/flot-charts/chart-tooltips.js"></script>
    <script src="~/adm/demo/js/other-charts.js"></script>
    <script src="~/adm/demo/js/jqvmap.js"></script>
    <!-- App functions and actions -->
    <script src="~/adm/js/app.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>