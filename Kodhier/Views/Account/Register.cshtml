@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}



    <link rel="stylesheet" type="text/css" href="~/css/RegisterPage.css" />
    <body>
        <div class="row">
            <div class="main">
                <header>
                    <div class="=icon"><img src="~/images/icon2.png" /></div>

                    <h4>Create a new account</h4>
                </header>
               
                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <hr />

                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" id="firstName" type="text" placeholder="Enter first name" name="first" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" id="lastName" type="text" placeholder="Enter last name" name="last" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                       </div>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" type="text" placeholder="Enter username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" type="text" placeholder="Enter your email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BirthDate"></label>
                                <input asp-for="BirthDate" class="form-control" type="text" placeholder="Enter your birth date" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" type="text" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" type="text" placeholder="Confirm password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-default">Register</button>
                    </form>
                </div>
            </div>   
    </body>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
