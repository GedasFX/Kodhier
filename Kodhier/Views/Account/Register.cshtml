@model RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Register"];
}

<link rel="stylesheet" type="text/css" href="~/css/RegisterPage.css" />
<div class="row">
    <div class="main">
        <header>
            <div class="=icon"><img src="~/images/icon2.png" /></div>

            <h4>@Localizer["Create a new account"]</h4>
        </header>

        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName">@Localizer["First name"]</label>
                <input asp-for="FirstName" class="form-control" type="text" placeholder=@Localizer["Enter first name"] />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">@Localizer["Last name"]</label>
                <input asp-for="LastName" class="form-control" type="text" placeholder=@Localizer["Enter last name"] />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username">@Localizer["Username"]</label>
                <input asp-for="Username" class="form-control" type="text" placeholder=@Localizer["Enter username"] />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">@Localizer["Eamil"]</label>
                <input asp-for="Email" class="form-control" type="text" placeholder=@Localizer["Enter your email"] />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthDate">@Localizer["Birth date"]</label>
                <input asp-for="BirthDate" class="form-control" type="date" placeholder=@Localizer["Enter your birth date"] />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">@Localizer["Password"]</label>
                <input asp-for="Password" class="form-control" type="password" placeholder=@Localizer["Enter password"] />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">@Localizer["Confirm password"]</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder=@Localizer["Confirm password"] />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">@Localizer["Register"]</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
