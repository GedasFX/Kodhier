@model IEnumerable<Kodhier.Models.Order>

@{
    ViewData["Title"] = "Checkout";
}
<link rel="stylesheet" type="text/css" href="~/css/Order.css" />
<header>
    <h1>CHECKOUT</h1>
</header>

<div class="table-responsive col-md-8 offset-md-2">
    <table class="table table-dark table-sm">
        <thead class="thead-light">
            <tr>
                <th></th>
                <th>
                    Pizza
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pizza.Price)
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody class="card-body">
            @foreach (var item in Model)
            {
                <tr id="@Html.DisplayFor(modelItem => item.Id)">
                    <td>
                        @Html.DisplayFor(modelItem => item.Pizza.ImagePath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pizza.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pizza.Price)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 </div>
