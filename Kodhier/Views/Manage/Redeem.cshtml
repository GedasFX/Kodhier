@model RedeemViewModel
@{
    ViewBag.Title = "Redeem code";
    Layout = "_Layout";
}
<link rel="stylesheet" type="text/css" href="~/css/Profile.css" />
<form asp-action="Redeem">
    <div class="main">
        <header class="col-md-12 offset-md-2">
            <h1>@ViewBag.Title</h1>
        </header>
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12 offset-md-4">
            <div class="form-group">
                <input type="submit" value="Redeem" style="margin-top:5px" class="btn btn-outline-success" />
            </div>
        </div>
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <p><strong>Error:</strong> @ViewData["Error"].ToString()</p>
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" role="alert">
                <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
            </div>
        }
    </div>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
