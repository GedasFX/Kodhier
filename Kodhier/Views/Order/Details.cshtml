@model Kodhier.ViewModels.OrderViewModels.OrderCreateViewModel

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" type="text/css" href="~/css/PizzaDetails.css" />


<div class="main col-md-12">
    <header>
        <h2>Pizza Details</h2>
    </header>
    <blockquote class="blockquote text-center">
        <p class="h1 text-uppercase">@Html.DisplayFor(model => model.Name)</p>
    </blockquote>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <div class="text-center">
                    <img src="@Html.DisplayFor(model => model.ImagePath)" class="rounded-circle img-fluid" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <dl class="dl-horizontal">
                        <dt>
                            "@Html.DisplayNameFor(model => model.Price)"
                        </dt>
                        <dd>
                            from
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt>@Html.DisplayFor(model => model.Description)</dt>
                    </dl>
                </div>
                <form asp-action="Create" asp-route-id="@Html.Raw(Model.Name)">
                    <div class="col-md-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="Price" class="control-label"></label>
                        <select class="dropdown-header" name="Order.Size">
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="50">50</option>
                        </select>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <input name="Name" value="@Html.DisplayFor(model => model.Name)" type="hidden" />
                    <input name="Price" value="@Html.DisplayFor(model => model.Price)" type="hidden" />
                    <input name="ImagePath" value="@Html.DisplayFor(model => model.ImagePath)" type="hidden" />

                    <div class="col-md-2">
                        <div class="form-group">
                            <input type="submit" value="Order" style="margin-top:5px" class="btn btn-outline-success" />
                        </div>
                    </div>
                </form>
                <div class="col-md-6">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

