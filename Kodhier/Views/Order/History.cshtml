@using Kodhier.ViewModels.OrderViewModels
@model IEnumerable<Kodhier.ViewModels.OrderViewModels.OrderViewModel>

@{
    ViewData["Title"] = "History";
}

<h2>History</h2>

<p>
    <a asp-action="Index">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pizza.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            Order complete
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pizza.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a asp-action="Create">Place another order</a>
                </td>
            </tr>
        }
    </tbody>
</table>
