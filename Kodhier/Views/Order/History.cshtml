@model IEnumerable<Kodhier.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "History";
}

<h2>History</h2>

<p>
    <a asp-action="Index">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPaymentSuccessful)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFinished)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPaymentSuccessful)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFinished)
                </td>
            </tr>
        }
    </tbody>
</table>
