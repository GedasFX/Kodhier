@model IEnumerable<Kodhier.Areas.Admin.ViewModels.PizzaViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Index"];
}
<link rel="stylesheet" type="text/css" href="~/css/Order.css" />
<div class="col-md-8 offset-md-2">
    <header>
        <h1>MENIU</h1>
    </header>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">
            <p><strong> @Localizer[@TempData["Success"].ToString()]</strong></p>
        </div>
    }
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-md-3">
                <div class="main" method="post" id="@Html.DisplayFor(modelItem => item.Id)">
                    <div class="products">
                        <img src=@Html.DisplayFor(modelItem => item.ImagePath) class="rounded-circle img-fluid" />
                        <h4 class="text-info text-center" style="margin-top:5px">@Html.DisplayFor(modelItem => item.Name)</h4>
                        <h4 class="text-white">@Localizer["from"] @Html.DisplayFor(modelItem => item.Price)</h4>
                        <a asp-action="Create" asp-route-id="@item.Id" asp-route-returnurl="@ViewData["ReturnUrl"]" style="margin-top:5px" class="btn btn-outline-success">@Localizer["DETAILS"]</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

