@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>().RequestCulture.UICulture.Name;
    var cultureItems = LocOptions.Value.SupportedUICultures;
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}



<li class="dropdown nav-itemGreetings form-group" role="presentation">
    <label class="dropdown-toggle" data-toggle="dropdown">
        <img src="~/images/flag_@(requestCulture).png" style="width:40px; height:20px" alt="@requestCulture" />
    </label>

    <div class="dropdown-menu form-group" aria-labelledby="dropdown_target">
        @foreach (var ci in cultureItems)
        {
            <form id="selectLanguage" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@returnUrl" method="post" class="form-group" role="form">
                <input name="culture" type="hidden" value="@ci.Name" />
                <div class="dropdown-item" onclick="this.parentElement.submit()"><img src="~/images/flag_@(ci.Name).png" style="width: 40px; height: 20px" /></div>
            </form>
        }
    </div>
</li>
