<li class="dropdown nav-itemGreetings" role="presentation">
    <a class="dropdown-toggle" data-toggle="dropdown">
        <strong>Language</strong>
        <span class="caret"></span>
    </a>
    <div class="dropdown-menu form-group" aria-labelledby="dropdown_target" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@returnUrl" method="post" role="form">
        @foreach (SelectListItem ci in cultureItems)
        {
            if (ci.Value == "en-US")
            {
                <a class="dropdown-item" ><img src="~/images/lt.png" style="width:40px;height:20px" /></a>
            }
            else
            {
                <a class="dropdown-item"><img src="~/images/us_flagpng.png" style="width:40px;height:20px" /></a>
            }
        }
    </div>
</li>

